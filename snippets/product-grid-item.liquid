<div class="grid__item  large--one-third medium--one-third ">
   <div id="product-{{ product.id }}" class="product-container" data-publish-date="{{ product.created_at }}">
      <div class="product-image ">
         <div class="product-thumbnail">
            <a href="{{ product.url }}" title="">
               <img class="product-featured-image" src="{{ product.featured_image | img_url: '270x350' }}"
                  alt="{{ product.title }}">
               {% comment %} <img class="back-img" src="//cdn.shopify.com/s/files/1/1195/4332/products/black_grande.png?v=1511938511" alt="Dress beautiful girls #001"> {% endcomment %}
            </a>
         </div>
         <!-- /.product-thumbnail -->
         {% comment %} <span class="label on-sale">Sale</span> {% endcomment %}
         <div class="product-actions">
            <form method="post" action="/cart/add" class="add-to-cart">
               <input type="hidden" name="id" value="{{ product.id }}" />
               <!-- <input type="submit" value="Buy now" class="btn" /> -->
               <button type="submit" name="add" id="AddToCart5330185665" class="btn">
                  <span class="fa fa-shopping-cart"></span>
               </button>
            </form>
            <a class="btn wishlist  awe-button product-quick-whistlist" href="/account/login" data-toggle="tooltip" title="Add to whistlist">
               <i class="fa fa-heart"></i>
               <span>Add to Wishlist</span>
            </a>
            <a href="{{ product.url }}" data-id="dress-beautiful-girls-001" class="btn product-quick-view btn-quickview"
               title="Quickview">
               <i class="fa fa-eye"></i>
            </a>
         </div>
      </div>
      <!-- /.product-image -->
      <div class="product-meta">
         <h4 class="product-name">
            <a href="{{ product.url }}" title="{{ product.title }}">{{ product.title }}</a>
         </h4>
         <!-- /.product-product -->
         <div class="product-price">
            <span class="amout">
            <span class="money">{{ product.price | money }}</span>
            {% comment %} 
               <del class="sale-price">
                  <span class="money">{{ product.price | money }}</span>
               </del>
               <span>From
                  <span class="money">$150.00</span>
               </span> {% endcomment %}
            </span>
         </div>
         <!-- /.product-price -->
      </div>
      <!-- /.product-meta -->
      {% comment %} <div class="swatch clearfix" data-option-index="1">
         <div data-value="red" class="swatch-element color red available" data-image="//cdn.shopify.com/s/files/1/1195/4332/products/red_grande.png?v=1511938455">
            <label for="swatch-1-red" style="background-color: red;">
               red
            </label>
         </div>
         <div data-value="blue" class="swatch-element color blue available" data-image="//cdn.shopify.com/s/files/1/1195/4332/products/green_grande.png?v=1511938481">
            <label for="swatch-1-blue" style="background-color: blue;">
               blue
            </label>
         </div>
         <div data-value="orange" class="swatch-element color orange available" data-image="//cdn.shopify.com/s/files/1/1195/4332/products/product1_4ec99af3-5771-4181-8113-89651b57e737_grande.jpg?v=1458188289">
            <label for="swatch-1-orange" style="background-color: orange;">
               orange
            </label>
         </div>
         <div data-value="black" class="swatch-element color black available" data-image="//cdn.shopify.com/s/files/1/1195/4332/products/black_grande.png?v=1511938511">
            <label for="swatch-1-black" style="background-color: black;">
               black
            </label>
         </div>
         <div data-value="pink" class="swatch-element color pink available">
            <label for="swatch-1-pink" style="background-color: pink;">
               pink
            </label>
         </div>
         <div data-value="yellow" class="swatch-element color yellow available">
            <label for="swatch-1-yellow" style="background-color: yellow;">
               yellow
            </label>
         </div>
         <div data-value="green" class="swatch-element color green available">
            <label for="swatch-1-green" style="background-color: green;">
               green
            </label>
         </div>
         <div data-value="white" class="swatch-element color white available">
            <label for="swatch-1-white" style="background-color: white;">
               white
            </label>
         </div>
      </div> {% endcomment %}
   </div>
   <!-- product-container -->
</div>